{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <h1>{{ item.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Page Title</th>
                <td>{{ item.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ item.text }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td><a href="{{ item.link }}" target="_blank">Look origin</a></td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ item.createdAt ? item.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('edit', item) %}
        <a class="btn btn-info" href="{{ path('item_edit', {'id': item.id}) }}">edit</a>

        {{ include('@Catalog/item/_delete_form.html.twig') }}
    {% endif %}

    {#{{ render(controller('App\\CatalogBundle\\Controller\\CommentController::new', { 'item': item })) }}#}

    <a class="btn btn-outline-dark" href="{{ path('item_index') }}">back to list</a>
{% endblock %}
