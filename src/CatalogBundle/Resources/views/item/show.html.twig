{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <h1>Item</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ item.title }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ item.createdAt ? item.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('edit', item) %}
        <a href="{{ path('item_edit', {'id': item.id}) }}">edit</a>

        {{ include('@Catalog/item/_delete_form.html.twig') }}
    {% endif %}

    <a href="{{ path('item_index') }}">back to list</a>
{% endblock %}
